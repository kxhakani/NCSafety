@model NCSafety.Models.Inspection
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "New Inspection";

    @section Selectivity{
        <link href="~/Content/selectivity-jquery.css" rel="stylesheet">
        <script src="~/Scripts/selectivity-jquery.js"></script>
       }

    @section Bootstrap3DatePicker{
        <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
        <script src="~/Scripts/NCSafetyScripts.js"></script>
        <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.css" />}


}
<br />
<h2>New Inspection</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table borderless">
        <tr>
            <td><h3>Date:</h3></td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class='col-sm-6'>
                        @Html.EditorFor(model => model.inspDate, new { htmlAttributes = new { @class = "form-control datetimepicker", @placeholder = DateTime.Today.ToShortDateString() } })
                        @Html.ValidationMessageFor(model => model.inspDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td><h3>Lab:</h3></td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class='col-sm-6'>
                        @Html.DropDownList("LabID", null, "Select a lab...", htmlAttributes: new { @class = "selectivity-input ddl" })<br />
                        @Html.ValidationMessageFor(model => model.LabID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
        <tr>
            <td><h3>School:</h3></td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class='col-sm-6'>
                        @Html.DropDownList("SchoolID", null, "Select a school...", htmlAttributes: new { @class = "selectivity-input ddl" })<br />
                        @Html.ValidationMessageFor(model => model.SchoolID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
        <tr>
            <td><h3>User:</h3></td>
        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class="col-sm-6">
                        @Html.DropDownList("UserID", null, "Select a user...", htmlAttributes: new { @class = "selectivity-input ddl" })<div class="glyphicon glyphicon-remove btnClear" style="cursor:pointer;margin-left:10px;display:none" />
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
    </table>
    <br />
    <input type="submit" value="Schedule" name="btn" class="btn ncBtn" />
    <input type="submit" value="Create" name="btn" class="btn ncBtn"/>
}
<br />    
<input type="button" class="btn btn-default" id="btnCancel" value="Cancel" onclick="window.location='/Home/Index'" />
    <br /><br />
    <div id="recentInspecs" style="display:none">
        <h3>Recent:</h3>
        <ul>
            <li><a href="/InspectionPages/EditInspection">TC14 (School of Trades)</a></li>
            <li><a href="/InspectionPages/EditInspection">L116 (School of Technology)</a></li>
            <li><a href="/InspectionPages/EditInspection">S333 (School of Media)</a></li>
        </ul>
    </div>